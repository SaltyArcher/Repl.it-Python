while True:
  try:
    x = int(input("Select operation\n 1.Add\n 2.Subtract\n 3.Multiply\n 4.Divide\n"))
  except ValueError:
    print("Invalid Operation, Try Again")
  if x == 1:
    a = int(input("Enter the first number to add with: "))
    b = int(input("Enter the second number to add with: "))
    print(a + b)
    print(' ')
  if x == 2:
    c = int(input("Enter the first number to subtract by: "))
    d = int(input("Enter the second number to subtract by: "))
    print(c - d)
    print(' ')
  if x == 3:
    e = int(input("Enter the first number to multiply by: "))
    f = int(input("Enter the second number to multiply by: "))
    print(e * f)
    print(' ')
   
  if x == 4:
    g = int(input("Enter the first number to divide by: "))
    h = int(input("Enter the second number to divide by: "))
    try:
      print(g/h)
      print(' ')
    except ZeroDivisionError:
      print('You can not divide by zero\n  ')
